[Unit]
Description=Hafton Movie Server - HTTP Streaming Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/hafton-movie-bot
ExecStart=/opt/hafton-movie-bot/bin/server
Restart=always
RestartSec=10
Environment="DOMAIN=yourdomain.com"

[Install]
WantedBy=multi-user.target

